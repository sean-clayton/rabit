{{!< default}}

<header class="index-header">
  <h1 class="index-title"><a class="js-ajax-link" title="{{@blog.title}}" href="{{@blog.url}}">{{@blog.title}}</a></h1>
  <h2 class="blog-description">{{@blog.description}}</h2>
</header>

<div id="latest-post" class="container">

  <ol class="post-list">
    {{#foreach posts}}
      <li class="post-stub {{post_class}}" >
        <a class="js-ajax-link"  title="{{title}} | {{@blog.title}}" href="{{url}}">
          <h4 class="post-stub-title">{{title}}</h4>

          <time class="post-stub-date" datetime="{{published_at}}">Published {{date timeago="true"}}</time>

          {{#if featured}}
            <span class="post-stub-tag">Featured</span>
          {{/if}}
        </a>
      </li>
    {{/foreach}}
  </ol>

  <div class="post-navigation">
    {{pagination}}
  </div>
</div>

